    "babel-loader": "^8.0.6",
    "core-js": "^3.6.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "size-limit": "^1.3.1"
  },
  "size-limit": [
    {
